{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
